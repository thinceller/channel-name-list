{
  "name": "with-firebase-hosting-and-typescript",
  "version": "1.0.0",
  "description": "Host Next.js SSR app on Firebase Cloud Functions with Firebase Hosting redirects. Built with typescript.",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "dev": "next src/app",
    "preserve": "npm run build-public && npm run build-functions && npm run build-app && npm run copy-deps && npm run install-deps",
    "serve": "cross-env NODE_ENV=production firebase serve",
    "deploy": "cross-env NODE_ENV=production firebase deploy",
    "clean": "rimraf \"dist/functions\" && rimraf \"dist/public\"",
    "build-app": "next build \"src/app\"",
    "build-public": "cpx \"src/public/**/*.*\" \"dist/public\" -C && cpx \"src/app/static/**/*.*\" \"dist/public/static\" -C",
    "build-functions": "tsc --project src/functions",
    "lint-app": "tslint --project src/app",
    "typecheck-app": "tsc --project src/app",
    "lint-functions": "tslint --project src/functions",
    "copy-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"dist/functions\" -C",
    "install-deps": "cd \"dist/functions\" && npm i"
  },
  "dependencies": {
    "@material-ui/core": "3.9.3",
    "@material-ui/styles": "3.0.0-alpha.10",
    "@zeit/next-typescript": "1.1.1",
    "dotenv-webpack": "1.7.0",
    "firebase": "5.11.0",
    "firebase-admin": "6.5.1",
    "firebase-functions": "2.3.1",
    "next": "9.3.2",
    "next-redux-wrapper": "3.0.0-alpha.3",
    "react": "16.8.6",
    "react-autosuggest": "9.4.3",
    "react-copy-to-clipboard": "5.0.1",
    "react-dom": "16.8.6",
    "react-notifications": "1.4.3",
    "react-redux": "6.0.1",
    "redux": "4.0.4",
    "redux-devtools-extension": "2.13.8",
    "redux-thunk": "2.3.0",
    "styled-components": "4.3.2"
  },
  "devDependencies": {
    "@types/next": "7.0.9",
    "@types/next-redux-wrapper": "2.0.2",
    "@types/react": "16.8.24",
    "@types/react-autosuggest": "9.3.10",
    "@types/styled-components": "4.1.18",
    "babel-plugin-styled-components": "1.10.6",
    "cpx": "1.5.0",
    "cross-env": "5.2.0",
    "firebase-tools": "7.2.2",
    "rimraf": "2.6.3",
    "tslint": "5.18.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-react": "3.6.0",
    "typescript": "3.5.3"
  }
}
